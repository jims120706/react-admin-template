{
  "extends": ["eslint-config-alloy/react"],
  "globals": {
    // 这里填入你的项目需要的全局变量
    // 这里值为 false 表示这个全局变量不允许被重新赋值，比如：
    //
    // jQuery: false,
    // $: false
  },
  "rules": {
    "indent": [
      "warn",
      2,
      {
        "SwitchCase": 1,
        "flatTernaryExpressions": true
      }
    ],
    // 禁止使用 console，提醒开发者，上线时要去掉
    "no-console": 2,
    "semi": ["error", "never"],
    "react/jsx-indent": ["warn", 2],
    // 必须使用 === 和 !== ，和 null 对比时除外
    "eqeqeq": [2, "always", { "null": "ignore" }],
    "react/jsx-indent-props": ["warn", 2],
    "no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "args": "none",
        "caughtErrors": "none"
      }
    ]
  }
}
